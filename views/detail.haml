%section{:id => "main"}
- if @data.length > 0
  .container
    .content
      .row
        .span9
          - image_file = '/data/chart_' + @params[:code] + '.png'
          %img{:src => image_file}
        .span3
          %table.table.table-striped
            %thead
              %tr
                %th 日付
                %th 始値
                %th 高値
                %th 安値
                %th 終値
            %tbody
              - limit = @data.length - 30
              - @data.each_with_index do |row, i|
                - if i >= limit
                  - date  = row[:date]
                  - open  = row[:open].to_i
                  - high  = row[:high].to_i
                  - low   = row[:low].to_i
                  - close = row[:close].to_i
                  - unless date == "Date"
                    %tr
                      %td
                        =h date
                      %td
                        =h open
                      %td
                        =h high
                      %td
                        =h low
                      %td
                        =h close
